<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.madlibs.MainActivity">

    <ImageView
        android:id="@+id/mad_lib_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/madlibs"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editText3" />

    <TextView
        android:id="@+id/multiAutoCompleteTextView2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textMultiLine"
        android:text="Welcome to Mad Libs! Please fill in some text! dgjsdkflgjkdfslgggggggggggggggdfgks;ld"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="56dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start!"
        android:onClick="goToFirst"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="82dp"
        android:layout_alignBottom="@+id/mad_lib_image"
        android:layout_toEndOf="@+id/mad_lib_image" />

</RelativeLayout>


